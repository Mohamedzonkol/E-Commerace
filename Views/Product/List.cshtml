@model IEnumerable<Product>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatagoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfferId)
            </th> 
            <th>

            </th>
         
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
         
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatagoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfferId)
            </td>
               <td>
                    <a class="btn btn-outline-dark mt-auto" asp-action="Details" asp-controller="Product" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-outline-dark mt-auto" asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-outline-dark mt-auto" asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
